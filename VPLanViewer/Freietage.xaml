<Page x:Class="VPLanViewer.Freietage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:VPLanViewer"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Freietage">

    <DockPanel LastChildFill="True">
        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" VerticalAlignment="Top" HorizontalAlignment="Center">
            <Button x:Name="back" Margin="10,0" Click="back_Click" HorizontalAlignment="Center">zurück</Button>
        </StackPanel>
        <Border DockPanel.Dock="Top" Height="3" Background="Black"/>
        <ScrollViewer>
            <StackPanel Loaded="View_Loaded" x:Name="View" HorizontalAlignment="Center" VerticalAlignment="center">
                <Label FontSize="30" Content="Freie Tage an den tagen:"/>
                <Label FontSize="20" Content="Es können unter umständen alte daten vorhanden sein"/>
            </StackPanel>
        </ScrollViewer>
    </DockPanel>
</Page>
